<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_zero_margin"
        android:layout_weight="1"
        android:background="@color/color_text_selected_red"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/activity_small_margin"
            android:text="@string/gift_header_name"
            android:textColor="#fff"
            android:textSize="@dimen/activity_middle_size"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/activity_middle_margin"
            android:src="@mipmap/attendance_share_icon" />

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/gift_tab"
        android:layout_marginBottom="@dimen/activity_smaller_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_zero_margin"
        android:layout_weight="0.8"
        app:tabIndicatorColor="@color/color_text_selected_red"
        app:tabSelectedTextColor="@color/color_text_selected_red" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gift_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_zero_margin"
        android:layout_weight="10" />

</LinearLayout>