<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/home_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_zero_margin"
        android:layout_weight="1"
        android:background="@color/color_text_selected"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_small_margin"
            android:text="@string/home_top_name"
            android:textColor="#fff"
            android:textSize="@dimen/text_middle_size"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_top_bg"
            android:drawableLeft="@mipmap/icon_search_grey"
            android:gravity="center_vertical|left"
            android:text="@string/home_top_search_name" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_small_margin"
            android:src="@mipmap/btn_signin" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.design.widget.TabLayout
                android:id="@+id/home_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="@dimen/activity_smaller_margin"
                android:layout_weight="10"
                app:tabIndicatorColor="@color/color_text_selected"
                app:tabSelectedTextColor="@color/color_text_selected" />

            <ImageView
                android:id="@+id/home_mean_arrow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/activity_small_margin"
                android:layout_weight="1"
                android:src="@mipmap/icon_btn_arrow_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_tab_ll_after"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/home_tab_after"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginBottom="@dimen/activity_smaller_margin"
                android:layout_weight="10"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="切换频道" />

            <ImageView
                android:id="@+id/home_mean_arrow_after"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/activity_small_margin"
                android:layout_weight="1"
                android:src="@mipmap/icon_btn_arrow_up" />

        </LinearLayout>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_zero_margin"
        android:layout_weight="10" />

</LinearLayout>